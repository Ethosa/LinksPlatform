{
  "metadata": [
    {
      "src": [
        {
          "files": [ "Platform.dotnet.sln"],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "Platform"
        }
      ],
      "dest": "doc/generated/obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "doc/generated/obj/api",
        "dest": "doc/generated/api"
      },
      {
        "files": [ "doc/articles/**/*.md", "*.md", "toc.yml", "restapi/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "doc/articles/images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "LinksPlatform",
      "_enableSearch": true
    },
    "dest": "doc/generated/site"
  }
}
