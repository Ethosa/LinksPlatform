@model LinkModel
@{
    Layout = null;
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Model.Link.ToString());
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/infinite/style.css">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/infinite.js"></script>

    <!-- <link href='http://fonts.googleapis.com/css?family=Open+Sans&v1' rel='stylesheet' type='text/css'> -->
</head>
<body>
    <div id="query">
        <div id="query-logo">links</div>
        <input type="text" autocomplete="off" spellcheck="false" tabindex="0" />
    </div>
    <div id="surface">
        <ul>
            <li>
                <div class="item">
                    @Html.Partial("LinkDescription", Model.Link)
                </div>
                @Html.Partial("InfiniteLinkReferersList", Model.ReferersModels)
            </li>
        </ul>
    </div>
</body>
</html>
