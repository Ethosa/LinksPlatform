@model List<WebTester.Models.LinkModel>

<ul>
@foreach (var item in Model)
{
    <li>
        <div class="link-referer-description">
            <a href='@Url.Action("Index", "Links", new { Id = item.Link.GetPointer().ToInt64() })'>
                @Html.Partial("LinkRefererDescription", item.Link)
            </a>
        </div>
    
        @if (item.ReferersModels.Count > 0)
        {
            @Html.Partial("LinkReferersList", item.ReferersModels);
        }
    </li>
}
</ul>